{{#each week as |day|}}
    <div {{action 'eventModal' day}} class="month-week-day {{day.otherMonth}}">
        {{day.day}}

        {{#each day.events as |event|}}
            {{event}}
        {{/each}}
    </div>
{{/each}}

{{#if isShowingModal}}
    {{#modal-dialog close='eventModal' translucentOverlay=true}}
        <form class="form" {{action 'newEvent' on='submit'}}>
            <div class="field-container">
                <label for="start-date">Start</label>
                {{input type="text" value=startDay id="start-date"}}
                {{input type="text" value=startTime id="start-time"}}
            </div>
            <div class="field-container row">
                <label for="end-date col-sm-4">End</label>
                {{input type="text" value=endDay id="end-date"}}
                {{input type="text" value=endTime id="end-time"}}
            </div>            
            <div class="field-container full">
                <label for="event-title">Title</label>
                {{input type="text" value=title id="event-title"}}   
            </div>
            <div class="field-container full">
                <label for="event-address">Address</label>
                {{input type="text" value=address id="event-address"}}   
            </div>
            <button type="submit">Create</button>            
        </form>     
    {{/modal-dialog}}
{{/if}}